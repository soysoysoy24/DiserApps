<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/statsRprtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circlelogo"
            android:translationZ="1dp">

            <ImageView
                android:id="@+id/prceSrvyImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/status_report" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-15dp"
            android:background="@color/statsBar"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Status Report"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/controlStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <include layout="@layout/layout_statusreport" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lineInv"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/controlStats"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#4FC3F7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sbmtRprtBtn"
        android:layout_below="@+id/lineInv">

      <!--  <include layout="@layout/layout_statusreportdata" />-->

        <ImageView
            android:id="@+id/imageViewNoData"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/nodatafoundv2"/>


        <ListView
            android:id="@+id/statsRptView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none">

        </ListView>

    </RelativeLayout>

</LinearLayout>