    <LinearLayout
      android:id="@+id/tableLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/imgHolder"
      android:orientation="vertical">



      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:stretchColumns="*">

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">



              <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="vertical">


                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="3dp"
                      android:gravity="center"
                      android:background="@color/addmoreColor">


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_gravity="center"
                          android:layout_marginTop="10dp"
                          android:fontFamily="@font/poppins_regular"
                          android:text="DISPLAY TYPE"
                          android:textAlignment="center"
                          android:textColor="#FFF"
                          android:textSize="12dp" />

                  </RelativeLayout>

                  <TextView
                      android:id="@+id/displayTpTxt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp"
                      android:text="Wirerack Display"
                      android:textAlignment="center"
                      android:textColor="#000"
                      android:textSize="15dp"
                      android:fontFamily="@font/poppins_regular"/>

              </LinearLayout>

              <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="vertical">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="3dp"
                      android:gravity="center"
                      android:background="@color/addmoreColor">


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_marginTop="10dp"
                          android:fontFamily="@font/poppins_regular"
                          android:text="ASSET NO."
                          android:textAlignment="center"
                          android:textColor="#FFF"
                          android:textSize="12dp" />

                  </RelativeLayout>

                  <TextView
                      android:id="@+id/assetTxt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:layout_marginTop="5dp"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:textColor="#000"
                      android:text="123421"
                      android:layout_marginBottom="5dp"
                      android:fontFamily="@font/poppins_regular"/>

              </LinearLayout>

          </TableRow>
      </TableLayout>

    </LinearLayout>


      <LinearLayout
        android:id="@+id/imgHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDisp"
            android:layout_width="102dp"
            android:layout_height="71dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>


    </LinearLayout>




</RelativeLayout>