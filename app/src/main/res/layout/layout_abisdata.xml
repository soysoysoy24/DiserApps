<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:elevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/datadesignlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CUSTOMER:"
                            android:textColor="#000"
                            android:fontFamily="@font/poppins_regular"
                            />-->

            <TextView
                android:id="@+id/cstmerTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TST001 - TEST CUSTOMER 1"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_regular"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#A9949494" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:text="RTV NO.: "
                android:textColor="#000" />

            <TextView
                android:id="@+id/invNumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10010110"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RTV DATE: "
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/InvDteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/05/2022"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATERIAL: "
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/matsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHEESE CAKES PK"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUANTITY: "
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/qtyUomTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 PACK/S"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPIRATION DATE: "
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/expDteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06/10/2022"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/poppins_regular"
                />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>