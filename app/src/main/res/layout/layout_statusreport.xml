<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/headerdesignlayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"

            android:layout_height="wrap_content"
            android:padding="0.9dp">

            <TextView
                android:id="@+id/docTxtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Select Customer"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>



        <EditText
            android:id="@+id/customerField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittxtdesign"
            android:drawableLeft="@drawable/customer"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="Select Customer"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#5C000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_regular"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:padding="0.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Report Category"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/rprtCatField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittxtdesign"
            android:drawableLeft="@drawable/invoicenum"
            android:ems="10"
            android:hint="Select Report Category"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#5C000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                  android:layout_height="wrap_content"
                    android:padding="0.9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="Date:"
                        android:textColor="#534F4F"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/dateStatsTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edittxtdesign"
                    android:drawableLeft="@drawable/calendar"
                    android:ems="10"
                    android:hint="Input Date"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    android:textColorHint="#5C000000"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:padding="0.9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="Time:"
                        android:textColor="#534F4F"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular" />

                </RelativeLayout>


                <EditText
                    android:id="@+id/tmeStatsTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/edittxtdesign"
                    android:drawableLeft="@drawable/timein"
                    android:ems="10"

                    android:fontFamily="@font/poppins_regular"
                    android:hint="Input Time"
                    android:paddingLeft="9dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    android:textColorHint="#5C000000"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15dp" />

            </LinearLayout>




        </LinearLayout>

        <RelativeLayout
            android:id="@+id/sbmtRprtBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/effect_submit"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:theme="@style/AppThemeFontStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Submit"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_regular" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>