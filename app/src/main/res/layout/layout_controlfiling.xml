<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerdesignlayout"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:padding="0.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Choose Category"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/categoryField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittxtdesign"
            android:drawableLeft="@drawable/filter"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="Select category"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#5C000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:padding="0.9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Date from:"
                        android:textColor="#534F4F"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/dteFrmFiling"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edittxtdesign"
                    android:drawableLeft="@drawable/calendar"
                    android:ems="10"
                    android:hint="Input date from"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    android:textColorHint="#5C000000"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:padding="0.9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Date to:"
                        android:textColor="#534F4F"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <EditText
                    android:id="@+id/dteToFiling"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/edittxtdesign"
                    android:drawableLeft="@drawable/calendar"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Input date to"
                    android:paddingLeft="9dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    android:textColorHint="#5C000000"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/textHeaderTitleMainRprt"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"

            android:layout_height="wrap_content"
            android:padding="0.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/report"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Reason for leaving"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/textHeaderMainRprt"
            android:background="#9C9C9C"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:padding="0.9dp">

            <EditText
                android:id="@+id/reasonTxtField"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/edittxtdesign"
                android:ems="10"
                android:gravity="top"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000"
                android:textColorHint="#5C000000"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="15dp"
                android:theme="@style/AppThemeFontStyle" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">




            <RelativeLayout
                android:id="@+id/sbmtRprtBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:background="@drawable/effect_submit"
                android:clickable="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:theme="@style/AppThemeFontStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Submit"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

            </RelativeLayout>




        </LinearLayout>

    </LinearLayout>





</LinearLayout>