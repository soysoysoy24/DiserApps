    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controlLayout"
        android:layout_below="@+id/lineInv"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/fLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <!--  <include layout="@layout/fragment_layout_display"/>-->

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sbmtRprtBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/cntrolLAy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/nxtBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/effect_click"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="0.9dp">

                <TextView
                    android:id="@+id/NxtTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/nxt"
                    android:textColor="#4FC3F7"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prevBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/effect_click"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="0.9dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/PrevTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/prev"
                    android:textColor="#4FC3F7"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sbmtRprtBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/effect_submit"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:theme="@style/AppThemeFontStyle"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Submit"
            android:textColor="#FFF"
            android:textSize="15dp" />

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/sbmtRprtBtn"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:visibility="gone"
        app:srcCompat="@drawable/addnew"
        app:tint="@android:color/white"
        app:backgroundTint="@color/teal_200"
        />


</RelativeLayout>