<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerdesignlayout"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:padding="0.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Select Customer"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/customerField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittxtdesign"
            android:drawableLeft="@drawable/customer"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="Select Customer"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#5C000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:padding="0.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="RTV Number"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <EditText
            android:id="@+id/RtvField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittxtdesign"
            android:drawableLeft="@drawable/invoicenum"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="Input RTV Number"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#5C000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp" />


        <RelativeLayout
            android:id="@+id/textHeaderReportDocNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:padding="0.9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="RTV Date"
                android:textColor="#534F4F"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/RtvDteField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittxtdesign"
            android:drawableLeft="@drawable/calendar"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="Input RTV Date"
            android:paddingLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#5C000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15dp" />


    </LinearLayout>

</LinearLayout>