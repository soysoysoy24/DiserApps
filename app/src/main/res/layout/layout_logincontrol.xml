<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/headerdesignlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:padding="0.9dp">

                <ImageView
                    android:id="@+id/userLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_left"
                    android:drawablePadding="10dp"
                    android:theme="@style/AppThemeFontStyle" />

            </RelativeLayout>


            <EditText
                android:id="@+id/bioIdField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="BIOID"
                android:paddingLeft="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000"
                android:backgroundTint="@color/statsBar"
                android:textColorHint="#5C000000"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="15dp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"

                android:layout_height="wrap_content"
                android:padding="0.9dp">

                <ImageView
                    android:id="@+id/passLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pass_left"
                    android:drawablePadding="10dp"
                    android:theme="@style/AppThemeFontStyle" />

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                app:passwordToggleContentDescription="Show password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/hintpass">



                <EditText
                    android:id="@+id/passField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:hint="Password"
                    android:paddingLeft="8dp"
                    android:inputType="textPassword"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    android:textColorHint="#5C000000"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15dp"
                    android:backgroundTint="@color/statsBar"
                    android:fontFamily="@font/poppins_regular"/>

            </com.google.android.material.textfield.TextInputLayout>






        </LinearLayout>


        <RelativeLayout
            android:id="@+id/LogInBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/effect_check_in_out"
            android:clickable="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Login"
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cnfrmPassTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/effect_click"
                android:clickable="true"
                android:fontFamily="@font/poppins_regular"
                android:text="FORGOT PASSWORD"
                android:textColor="#555555"
                android:textSize="12dp" />


        </RelativeLayout>



    </LinearLayout>

</LinearLayout>